<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorBackGreen"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:clickable="false">

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="登录"
        android:id="@+id/login_btn"
        android:textColor="@color/colorBackGreen"
        android:background="@drawable/round_btn"
        android:shadowColor="#00000000"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="登录"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="18dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_phoneNum"
        android:layout_below="@+id/title"
        android:layout_marginTop="21dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:drawableTint="#ffffff"
        android:hint="手机号"
        android:textColorHint="#dddddd"
        android:textColor="#ffffff"
        android:autoText="false"
        android:background="@drawable/writh_line"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/login_pwd"
        android:textColorHint="#dddddd"
        android:textColor="#ffffff"
        android:password="true"
        android:hint="@string/password_hint"
        android:background="@drawable/writh_line"
        android:layout_below="@+id/login_phoneNum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/login_phoneNum"
        android:layout_alignEnd="@+id/login_phoneNum" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="注册"
        android:id="@+id/regist"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/regist_btn"
        android:textColor="#ffffff" />


</RelativeLayout>
